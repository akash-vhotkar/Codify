        <script>

            function removecourse(course) {
                let name = course.parentElement.parentElement.children[1].innerHTML;
                let coursename = name.trim();
                let remove_price = course.dataset.price;

                let total = document.querySelector('#total_price');
                let new_total = parseInt(total.innerHTML) - parseInt(remove_price);
                total.innerHTML = new_total;


                var xhttp = new XMLHttpRequest();
                xhttp.onreadystatechange = function () {
                    if (this.readyState == 4 && this.status == 200) {
                        console.log("running");
                    }
                };
                xhttp.open("GET", "/codify/removecourse?coursename=" + coursename + "&remove_price=" + remove_price + "&total=" + new_total, true);
                xhttp.send();

                setTimeout(function () {
                    window.location.href = "http://localhost:5000/codify/home/cart"
                    // course.parentElement.parentElement.style.display = "none";


                }, 1000);



            }
        </script>

