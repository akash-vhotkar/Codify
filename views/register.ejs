<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <script src="https://kit.fontawesome.com/5c174d451e.js" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <title>bookmytaxia.com</title>
</head>
<style>
    .mycontainer {
        width: 100vw;
        height: 90.7vh;
        background: linear-gradient(to right, #ff00cc, #333399);
    }

    .inner-con {
        padding: auto;
        margin: auto;
        width: 25vw;
        border-radius: 1vh;
        height: 90vh;
        background-color: white;
        text-align: center;
    }

    .inner-con input {
        align-items: center;
        outline: none;
        border-radius: 2vw;
        border-color: rgba(0, 0, 0, 0.3);
        padding: 1vh;
        margin-top: 3vh;
        width: 15vw;
    }

    .inner-con button {
        align-self: center;
        text-align: center;
        margin-top: 2vh;
        background-color: black;
        outline: none;
        border: none;
        padding: 1vh;
        border-radius: 2vw;
        color: white;
        width: 15vw;
    }
</style>

<body>
    <%- include('partials/loginregisternav')%>



        <div class="container-fluid mycontainer">
            <div class="inner-con">
                <h4 class="pt-3">Welcome to bookmytaxi</h4>
                <h1>Register here</h1>
                <%- include('partials/registererr')%>
                    <form action="/bookmytaxi/auth/register" method="POST">
                        <input type="text" placeholder="Enter your name" name="name">
                        <input type="text" placeholder="Enter your Username" name="username">
                        <input type="email" placeholder="Enter your email" name="email">
                        <input type="password" placeholder="Enter your passworld" name="password">
                        <input type="password" placeholder="Enter your contirm passworld" name="confirm_pass">
                        <br>
                        <button type="submit">submit</button>
                    </form>
                    <h6 class="pt-2">new to bookmytaxi <a href="">register here</a> </h6>
                    <hr>
                    <h6 class="pt-2 mt-0">or you can login with <span><i class="fab fa-google-plus-g"></i></span></h6>
                    <form action="/codify/auth/google" method="GET">
                        <button type="submit"><i class="fab fa-google-plus-g"></i></button>
                    </form>

            </div>

        </div>



        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
            crossorigin="anonymous"></script>

